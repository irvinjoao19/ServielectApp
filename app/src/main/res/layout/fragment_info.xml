<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.InfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:text="Marca"
            android:gravity="right"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE5"
            android:layout_above="@+id/textViewModelo"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_toEndOf="@+id/textViewMarca"
            android:layout_toRightOf="@+id/textViewMarca"

            />

        <TextView
            android:id="@+id/textViewModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMarca"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Modelo"
            android:gravity="right"
            android:textSize="20dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE4"
            android:textSize="15dp"
            android:layout_alignBaseline="@+id/textViewModelo"
            android:layout_alignBottom="@+id/textViewModelo"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />


        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewModelo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            android:text="Version"
            android:gravity="right"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE3"
            android:layout_above="@+id/textViewCelular"
            android:layout_toRightOf="@+id/textViewVersion"
            android:layout_toEndOf="@+id/textViewVersion"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:id="@+id/textViewCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewVersion"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="Celular"
            android:gravity="right"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE2"
            android:layout_alignBottom="@+id/textViewCelular"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

    </RelativeLayout>


</FrameLayout>
